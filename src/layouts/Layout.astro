---
import '@fontsource/calistoga'
import '@fontsource/merriweather'
import '@fontsource/open-sans'
import '../styles/main.css'

import Navigation from '../components/Navigation.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Anthony Site</title>
  </head>
  <body class="m-0 flex h-full min-h-screen w-full flex-col">
    <main
      class="site-content mx-auto grid w-full max-w-screen-lg grow grid-cols-12 gap-3"
    >
      <section class="col-start-1 col-end-13 px-3 md:px-0">
        <Navigation />
        <slot />
      </section>
    </main>
  </body>
</html>

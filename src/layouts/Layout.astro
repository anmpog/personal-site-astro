---
import '@fontsource/calistoga'
import '@fontsource/merriweather'
import '@fontsource/open-sans'

import Navigation from '../components/Navigation.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <div class='site-content container grid grid-cols-12 gap-6'>
      <section
        class='center-content col-start-1 col-end-13 px-3 md:px-0 lg:col-start-2 lg:col-end-12 xl:col-start-4 xl:col-end-10'
      >
        <Navigation />
        <slot />
      </section>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  .site-content {
    flex: 1;
  }
</style>
